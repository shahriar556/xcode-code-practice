  var bg1: Float = 0.5
    var bg2: Float = 0.5
    var bg3: Float = 0.5
    
    
    
    
    @IBAction func slider(_ sender: UISlider) {
        bg1 = sender.value
        bg()
    }
    
    @IBAction func slider2(_ sender: UISlider) {
        bg2 = sender.value
        bg()
    }
    
    @IBAction func slider3(_ sender: UISlider) {
        bg3 = sender.value
        bg()
        
    }
    
    func bg(){
        view.backgroundColor = UIColor(red: CGFloat(bg1) ,green: CGFloat(bg2),blue: CGFloat(bg3),alpha: 1)
        
    }
