import UIKit

class ViewController: UIViewController {

    
    @IBOutlet weak var action: UISwitch!
    
    @IBAction func switchAction(_ sender: UISwitch) {
        let one = Float.random(in: 0..<1)
        let two = Float.random(in: 0..<1)
        let three = Float.random(in: 0..<1)
        
        view.backgroundColor = UIColor(red: CGFloat(one) ,green: CGFloat(two),blue: CGFloat(three),alpha: 1)
    }
    
}
